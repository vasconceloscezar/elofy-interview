{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "label": "Open terminals",
      "dependsOn": [
        "server",
        "client"
      ],
      // Mark as the default build task so cmd/ctrl+shift+b will create them
      "group": {
        "kind": "build",
        "isDefault": true
      },
      // Try start the task on folder open
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      // The name that shows up in terminal tab
      "label": "server",
      // The task will launch a shell
      "type": "shell",
      "command": "php artisan serve",
      // Set the shell type
			
      "options": {
				"cwd": "${workspaceFolder}/backend",
        "shell": {
          "executable": "cmd.exe",
          "args": [],
        }
      },
			"presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
      // Mark as a background task to avoid the spinner animation on the terminal tab
      "isBackground": true,
      "problemMatcher": [],
      // Create the tasks in a terminal group
      
    },
    {
      "label": "client",
      "type": "npm",
      "script": "start",
      "options": {
       "cwd": "${workspaceFolder}/frontend",
      },
      "isBackground": true,
      "problemMatcher": [],
			"presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        }
     
    }		
  ]
}